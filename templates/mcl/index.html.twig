{% extends 'base.html.twig' %}

{% block title %}Mitzi Castillo{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    body { background-color: black; }
</style>

    <div class="flex justify-center text-white mt-2 mb-2 md:mt-12 md:mb-12">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 max-w-7xl w-full">
            {% for publications in content %}
                <div id="{{ publications.id }}" class="flex flex-col place-items-center">
                    <div class="group relative w-[300px] h-[200px] overflow-hidden"> <!-- Fixed size container -->
                        {% if publications.fileType == 'image' %}
                            <img
                                    class="w-full h-full object-cover transition-all duration-500 group-hover:blur-sm rounded-lg"
                                    src="{{ asset('uploads/images/' ~ publications.fileName) }}"
                                    alt="{{ publications.title }}"
                            >
                        {% else %}
                            <video controls class="w-full h-full object-cover">
                                <source src="{{ asset('upload/images/' ~ publications.fileName) }}" type="video/mp4">
                                Votre navigateur ne supporte pas la lecture de vid√©os.
                            </video>
                        {% endif %}
                        <p class="absolute inset-0 flex items-center justify-center text-white bg-black bg-opacity-50 opacity-0 transition-opacity duration-500 group-hover:opacity-20 group-hover:cursor-pointer">
                        {{ publications.title }}
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
