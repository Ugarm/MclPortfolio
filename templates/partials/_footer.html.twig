<footer class="text-white p-4 mt-8 relative overflow-hidden" style="background: #0a0a0a;">
    <!-- Intense Neon Gradient Background -->
<div class="absolute inset-0 z-0" style="
        background: linear-gradient(-45deg,
            #4a00e0, #8e2de2, #24c6dc, #ff00cc, #4a00e0
        );
        background-size: 400% 400%;
        animation: gradientFlow 15s ease infinite;
    "></div>

    <!-- Vibrant overlay for neon contrast -->
    <div class="absolute inset-0 z-0" style="
        background: radial-gradient(circle at center,
            transparent 0%,
            rgba(0, 0, 10, 0.9) 100%
        );
    "></div>

    <!-- Footer content with neon text glow -->
    <div class="container mx-auto text-center relative z-10">
        <p class="text-sm font-mono tracking-wider" style="
            text-shadow: 0 0 10px #00ffff,
                         0 0 20px rgba(0, 255, 255, 0.5);
            animation: textPulse 4s ease infinite alternate;
        ">
            &copy; {{ 'now'|date('Y') }} Mitzi Castillo. All rights reserved.
        </p>
    </div>

    <style>
        @keyframes gradientFlow {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; filter: hue-rotate(45deg); }
            100% { background-position: 0% 50%; }
        }

        @keyframes textPulse {
            0% { text-shadow: 0 0 10px #00ffff, 0 0 20px rgba(0, 255, 255, 0.5); }
            50% { text-shadow: 0 0 15px #ff00ff, 0 0 30px rgba(255, 0, 255, 0.7); }
            100% { text-shadow: 0 0 10px #ffff00, 0 0 20px rgba(255, 255, 0, 0.5); }
        }
    </style>
</footer>